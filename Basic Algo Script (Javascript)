//Reverse a String

function reverseString(str) {
  
  str = str.split('').reverse().join(''); 
  return str;
}

reverseString("hello");

//Factorialize a Number

function factorialize(num) {
  if (num === 0) {
    return 1;
  }
  
  // This is it! Recursion!!
  return num * factorialize(num - 1);
  
}

factorialize(5);
